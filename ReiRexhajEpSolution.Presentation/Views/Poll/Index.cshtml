@model IEnumerable<ReiRexhajEpSolution.Domain.Models.Poll>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Polls";
}
<h2>All Polls</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Poll</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var poll in Model)
        {
            <tr>
                <td>@poll.Title</td>
                <td>@poll.DateCreated</td>
                <td>
                    <a asp-action="Details" asp-route-id="@poll.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@poll.Id" class="btn btn-warning">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
